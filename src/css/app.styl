// app global css
.load
    position fixed
    background-color #fff
    height 100%
    width 100%
    top 0
    right 0
    margin 0
    z-index 20000

.container
    width 100%
    padding-right 15px
    padding-left 15px
    margin-right auto
    margin-left auto
    @media (min-width:576px)
        max-width 540px
    @media (min-width:768px)
        max-width 720px
    @media (min-width:992px)
        max-width 960px
    @media (min-width:1200px)
        max-width 1140px

.cursor
    cursor pointer

.q-notification > div > .q-alert-side
    background-color #1e87da

.q-notification > div > .q-alert-content > div
    font-family 'WorkSans-Regular'
    font-size 15px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height 1.14
    letter-spacing normal
    text-align center
    color #1e87da

.q-notification > .bg-negative > .q-alert-content > div
    color white

.q-notification > .bg-negative > .q-alert-side
    background-color #e65541 !important

.q-notification > .bg-info > .q-alert-content > div
    color white

.q-notification > .bg-info > .q-alert-side
    background-color #006cc2 !important

.q-notification > .bg-info > .q-alert-content
    background-color white !important

.q-notification > .bg-info > .q-alert-content > div
    color #006cc2 !important
    font-weight bold


.q-notification > .bg-info
    background-color white !important

.modal-content
    width 50vw
    border-radius 5px
    background-color #ffffff
    position relative
    max-width 800px !important

.modal-header
    font-family 'WorkSans-Regular'
    font-size 19px
    font-style normal
    font-stretch normal
    line-height 1.2
    letter-spacing normal
    color #006cc2
    text-align left
    font-weight 600
    position relative

.modal-header:before
    content ''
    position absolute
    bottom 40%
    border-bottom 1px #242424 solid
    z-index 0
    left 197px
    width -webkit-calc(100% - 214px)
    width -moz-calc(100% - 214px)
    width calc(100% - 214px)

.modal-body
    font-family 'WorkSans-Regular'
    font-size 15px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height 1.16
    letter-spacing normal
    text-align left
    color #242424

.modal-buttons > button:nth-child(1)
    border-radius 2px
    color #006cc2 !important
    font-family 'WorkSans-Regular'
    font-weight 600
    width 80px
    line-height 1.17
    margin-bottom 10px

.modal-buttons > button:nth-child(2)
    border-radius 2px
    border solid 1px #006cc2
    color #ffffff !important
    font-family 'WorkSans-Regular'
    font-weight 600
    width 80px
    line-height 1.17
    margin-bottom 10px
    margin-right 10px

.relativePlacing
    position relative

.q-tooltip
    z-index 10000000000

.textalignc
    text-align center

.popUpBox
    position fixed
    height 100vh
    width 100%
    left 0px
    top 0px
    display flex
    align-items center
    justify-content center
    padding: 0px
    background-color rgba(0,0,0,0.6)
    z-index 1000

.popUpContainer
    background-color rgba(0, 0, 0, 0.6)
    position fixed
    height 100%
    width 100%
    z-index 1000
    left 0px

.popUpDialogBox
    background-color #fff
    position relative
    z-index 10000
    padding 15px 0
    border-radius 10px
    box-shadow 0 3px 8px rgba(0,0,0,0.2), 0 4px 4px rgba(0,0,0,0.14), 0 8px 7px 6px rgba(0,0,0,0.12)

.closeIcon
    position absolute
    font-size 19px
    top 5px
    right 5px
    cursor pointer

